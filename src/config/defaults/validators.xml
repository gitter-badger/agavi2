<?xml version="1.0" encoding="utf-8"?>
<ae:configurations xmlns="http://agavi.org/agavi/config/parts/validators/1.1" xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1">
	
	<ae:configuration>
		<validator_definitions>
			
			<validator_definition name="and" class="Agavi\Validator\AndoperatorValidator">
				<ae:parameter name="break">true</ae:parameter>
			</validator_definition>
			
			<validator_definition name="arraylength" class="Agavi\Validator\ArraylengthValidator">
				<ae:parameter name="min">1</ae:parameter>
			</validator_definition>
			
			<validator_definition name="boolean" class="Agavi\Validator\BooleanValidator" />
			
			<validator_definition name="datetime" class="Agavi\Validator\DateTimeValidator">
				<ae:parameter name="check">true</ae:parameter>
			</validator_definition>
			
			<validator_definition name="email" class="Agavi\Validator\EmailValidator" />
			
			<validator_definition name="equals" class="Agavi\Validator\EqualsValidator" />
			
			<validator_definition name="file" class="Agavi\Validator\FileValidator" />
			
			<validator_definition name="imagefile" class="Agavi\Validator\ImageFileValidator" />
			
			<validator_definition name="inarray" class="Agavi\Validator\InarrayValidator">
				<ae:parameter name="sep">,</ae:parameter>
			</validator_definition>
			
			<validator_definition name="isset" class="Agavi\Validator\IssetValidator" />
			
			<validator_definition name="isnotempty" class="Agavi\Validator\IsNotEmptyValidator" />

			<validator_definition name="json" class="Agavi\Validator\JsonValidator" />
			
			<validator_definition name="not" class="Agavi\Validator\NotoperatorValidator" />
			
			<validator_definition name="number" class="Agavi\Validator\NumberValidator">
				<ae:parameter name="type">int</ae:parameter>
			</validator_definition>
			
			<validator_definition name="or" class="Agavi\Validator\OroperatorValidator">
				<ae:parameter name="break">true</ae:parameter>
			</validator_definition>
			
			<validator_definition name="regex" class="Agavi\Validator\RegexValidator">
				<ae:parameter name="match">true</ae:parameter>
			</validator_definition>
			
			<validator_definition name="set" class="Agavi\Validator\SetValidator" />
			
			<validator_definition name="string" class="Agavi\Validator\StringValidator">
				<ae:parameter name="min">1</ae:parameter>
			</validator_definition>
			
			<validator_definition name="xor" class="Agavi\Validator\XoroperatorValidator" />
			
		</validator_definitions>
	</ae:configuration>
	
</ae:configurations>